<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Excercise03.View.Excs2"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="White">
    <ContentPage.Content>
        <Grid RowDefinitions="2*,0.2*,2*">
            <Image Grid.Row="0" Aspect="AspectFill" x:Name="img"/>
            <StackLayout Orientation="Horizontal" BackgroundColor="Transparent" Grid.Row="1" Margin="30, 10, 0,0"
                         Spacing="20">
                <Label Text="Like" TextColor="#03A9F4" FontSize="16"/>
                <Label Text="Comment" TextColor="#03A9F4" FontSize="16"/>
                <Label Text="Share" TextColor="#03A9F4" FontSize="16"/>
            </StackLayout>
            <StackLayout Orientation="Vertical" Grid.Row="2" Margin="5,0,5,0">
                <BoxView HeightRequest="2" Color="#898C8E" />
                <Label Text="700 Likes" TextColor="Black"/>
                <Label Text="Mình tôi lẻ bước lạc vào giấc mơ hão huyền mà đâu biết em phũ phàng, Nguyện thân trai. Thôi kiếp này"
                       TextColor="#262627"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>