<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Excercise03.View.Page30_excs01"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False">
    <Grid RowDefinitions="*,2*">
        <StackLayout Grid.Row="0" BackgroundColor="#f7f7f7" Orientation="Vertical">
            <Label Text="$11.95" FontSize = "60" FontAttributes="Bold" TextColor = "#33353a" 
                   VerticalOptions="Center" HorizontalOptions="Center"/>
            <Button Text="Add $7.99 to Credit" BackgroundColor = "#1695A3" BorderRadius = "15"  
                    FontSize ="15" FontAttributes ="Bold" Margin="50,0,50,0" HeightRequest="50"
                    VerticalOptions="Center" Clicked="Button_Clicked"/>
        </StackLayout>
        <StackLayout Grid.Row="1" Orientation="Vertical" HorizontalOptions="Center">
            <Label Text="Why pay for credit?" TextColor="Black" FontSize="15" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
            <Label Text="Người đã lấy trái tim anh rồi, người ơi cớ sao đang yêu lại thôi. Giọt lệ anh đã xóa nhòa niềm tin hóa đá..." FontSize="13"
                   HorizontalOptions="Center" Margin="20,0,20,0"/>
            <Label Text="clicked btn to go page excs2" Opacity="0.5" HorizontalOptions="Center"/>
        </StackLayout>
    </Grid>
</ContentPage>